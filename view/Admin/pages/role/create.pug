extends ../../layout/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block main 
    if(role.permissions.includes("roles_create"))
        +alert-error(5000)

        h1(class="mb-4") 
            !=pagetitle 

        form(action=`${prefixAdmin}/roles/create` 
            id="form-create-product"
            method="post" 
            )
            div(class="form-group")
                label(for="title") Tieu de 
                input(
                    type="text" 
                    class="form-control" 
                    id="title" 
                    name="title" 
                    required
                )
            div(class="form-group")
                label(for="desc") Mo ta 
                input(
                    type="text"
                    class="form-control" 
                    id="desc" 
                    name="description" 
                ) 
            div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) tao moi