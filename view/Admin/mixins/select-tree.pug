mixin select-tree(record, level = 1, selectedId)
    each item in record
        - const prefix = Array(level + 1).join("-- ")
        option(value=item.id, selected=(item.id == selectedId)) #{prefix}#{item.title}
        if item.child && item.child.length > 0
            +select-tree(item.child, level + 1, selectedId)
