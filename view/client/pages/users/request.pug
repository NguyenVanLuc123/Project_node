extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main  
    .container.my-3 
        include ../../partials/listLinkUser 
        .row    
            .col-12 
                +box-head("Danh sach nguoi dung")
        .row 
            each user in users
                .col-6 
                    div(class=`box-user add` )
                        div(class="inner-avartar")
                            if user.avatar
                                img(
                                    src=user.avatar
                                    alt="nguyen van a"
                                )
                            else 
                                img(
                                    src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQU9aiLd1yNA54b4JMz0U7ORLGRDO3Z2T3fZg&s"
                                    alt="nguyen van a"
                                )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons") 
                                button(
                                    class="btn btn-sm btn-secondary mr-1" btn-cancel-friend=user.id
                                ) huy loi moi

    block script 
        script(type="module" src="/js/users.js")
