extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main  
    .container.my-3 
        include ../../partials/listLinkUser 
        .row    
            .col-12 
                +box-head("Danh sach nguoi dung")
        .row(id="user-list" firend_user_id=user.id)
            each user in users
                .col-6 
                    div(class=`box-user add` box_user-id=user.id)
                        div(class="inner-avartar")
                            if user.avatar
                                img(
                                    src=user.avatar
                                    alt="nguyen van a"
                                )
                            else 
                                img(
                                    src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQU9aiLd1yNA54b4JMz0U7ORLGRDO3Z2T3fZg&s"
                                    alt="nguyen van a"
                                )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                a( href=`/chat/${user.roomChatid}`
                                    class="btn btn-sm btn-primary mr-1" btn-chat-friend=user.id
                                ) Nhan tin 
                                button(
                                    class="btn btn-sm btn-secondary mr-1" btn-unfriend=user.id
                                ) Huy ket ban
                        div(
                            class="inner-status"
                            status=user.statusOnline
                        )   <i class="fa-solid fa-circle"></i>

    block script 
        script(type="module" src="/js/users.js")
