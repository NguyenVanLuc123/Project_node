extends ../../layout/default.pug
include ../../mixins/alert.pug
include ../../mixins/box-head.pug
block main 
        +alert-error(5000)


        .container.my-3 
            .row 
                .col-12 
                    +box-head("Create-room")

            .row 
                .col-12
                    form(action=`/room-chat/create` 
                    method="POST" 
                    )
                        div(class="form-group")
                            label <b> Them thanh vien </b>
                            div(class="form-group")
                                label(for="title") Tieu de 
                                input(
                                    type="text" 
                                    class="form-control" 
                                    id="title" 
                                    name="title" 
                                    required
                                )
                            each friend in friendlist
                                div(class="form-check")
                                    input(
                                        type="checkbox"
                                        class="form-check-input" 
                                        value=friend.user_id
                                        id=`user-${friend.user_id}` 
                                        name="userid" 
                                    ) 
                                    lable(
                                        class="form-check-lable"
                                        for=`user-${friend.user_id}` 
                                    ) #{friend.infor.fullName}
                        div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) tao 