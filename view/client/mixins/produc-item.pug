mixin produc-item(item)
    .col-4.mb-3     
        .product-item 
            .inner-img
                a( href=`/products/detail/${item.slug}`  )
                    img(src=item.thumbnail alt=item.title) 
                    if item.featured=="1"
                        .inner-featured Noi bat
            .inner-content  
                h4.inner-title #{item.title}
                .inner-price-new 
                    != item.newprice + '$'
                .inner-price-old 
                    != item.price + '$'  
                .inner-discount
                    != item. discountPercentage +'%'